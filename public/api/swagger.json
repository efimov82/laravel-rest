{
    "swagger": "2.0",
    "info": {
        "title": "Articles Api",
        "description": "Laravel 5.2 Rest Api.",
        "contact": {
            "email": "efimov82@gmail.com"
        },
        "version": "1.0.0"
    },
    "host": "localhost:8000",
    "basePath": "/",
    "schemes": [
        "http",
        "https"
    ],
    "paths": {
        "/articles": {
            "get": {
                "tags": [
                    "articles"
                ],
                "summary": "Display a listing of the Articles.",
                "description": "Returns listing of articles.",
                "operationId": "api.dashboard.index",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Articles list."
                    }
                }
            },
            "post": {
                "tags": [
                    "articles"
                ],
                "summary": "Add new Article.",
                "description": "Add new article.",
                "parameters": [
                    {
                        "name": "article",
                        "in": "body",
                        "description": "Article to add to the store",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Article"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Article created successful",
                        "schema": {
                            "$ref": "#/definitions/Article"
                        }
                    }
                }
            }
        },
        "/articles/{id}": {
            "get": {
                "tags": [
                    "articles"
                ],
                "summary": "Detail of the Article.",
                "description": "Returns detail of article.",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Get Detail of the Article."
                    }
                }
            }
        }
    },
    "definitions": {
        "Article": {
            "required": [
                "title",
                "body"
            ],
            "properties": {
                "title": {
                    "type": "string"
                },
                "body": {
                    "type": "string"
                }
            },
            "type": "object",
            "xml": {
                "name": "Article"
            }
        }
    }
}